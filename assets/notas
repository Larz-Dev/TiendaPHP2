                echo $i, " ";
            }

            echo "<br />--------------<br />";


            $multiplicar = 3;

            for ($i = 0; $i < 10; $i++) {
                echo $i * $multiplicar, " ";
            }

            echo "<br />--------------<br />";

            $sumanumeros = 0;

            for ($i = 0; $i < 100; $i++) {
                $sumanumeros += $i;
            }
            echo $sumanumeros;

            echo "<br />--------------<br />";

            $n = 20;
            for ($i = 0; $i < $n; $i++) {
                if ($i % 2 == 0) {

                    echo $i, " ";
                }
            }
            echo "<br />--------------<br />";


            $n = 5;
            $factorial = 1;
            for ($i = 0; $i < $n; $i++) {
                $factorial += $i * $factorial;
            }
            echo $factorial;

            echo "<br />--------------<br />";


            $contador = 0;
            $numero = 100;

            for ($i = 1; $i < $numero; $i++) {
                for ($j = 2; $j < $numero * 10; $j++) {

                    if ($i % $j == 0) {
                        $contador++;
                    }
                }
                if ($contador == 1) {
                    echo $i, " ";
                }
                $contador = 0;
            }




            $num1 = 0;
            $num2 = 1;
            $suma = 0;

            for ($i = 0; $i < 10; $i++) {
                $suma = $num1 + $num2;
                $num2 = $num1;
                $num1 = $suma;
                echo $suma, " ";
            }


