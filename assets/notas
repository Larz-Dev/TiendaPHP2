<div class="m-5 card"  >
    <div class="card-body">
        <h5 class="card-title">Actividades 3</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">en PHP</h6>
        <p class="card-text">


            <?php

            $segundos = 150;


            $tiempo =  gmdate("i:s", $segundos);




            echo $tiempo;
            echo "<br />--------------<br />";

            $Valor = 1000;
            $Suma  = 0;
            $billete100 = 0;
            $billete50 = 0;
            $billete20 = 0;
            $billete10 = 0;
            $billete5 = 0;
            $monedas = 0;

            while ($Suma  <= $Valor) {
                $Suma = $monedas + ($billete5 * 5) + ($billete10 * 10) + ($billete20 * 20) + ($billete50 * 50) + ($billete100 * 100);


                $monedas += 1;


                if ($monedas >= 5) {
                    $monedas = 0;
                    $billete5 += 1;
                }


                if ($billete5 >= 2) {

                    $billete10 += 1;
                    $billete5 = 0;
                }

                if ($billete10 >= 2) {

                    $billete20 += 1;
                    $billete10 = 0;
                }

                if ($billete20 >= 5) {

                    $billete50 += 1;
                    $billete20 = 0;
                }

                if ($billete50 >= 10) {

                    $billete100 += 1;
                    $billete50 = 0;
                }
            }
            echo "Monedas : ", $monedas, "<br/>";
            echo "Billetes 5$: ", $billete5, "<br/>";
            echo "Billetes 10$: ", $billete10, "<br/>";
            echo "Billetes 20$: ", $billete20, "<br/>";
            echo "Billetes 50$: ", $billete50, "<br/>";
            echo "Billetes 100$: ", $billete100, "<br/>";

            echo "<br />--------------<br />";

            $largo = 5;
            $ancho = 40;
            $pared = "G";
            $espacio = "U";

            for ($i = 0; $i < $largo; $i++) {

                echo '<br /><span  style= "background-color:rgb('. $i *50 .', 0, 0);">'.$pared.'</span>' ;

                for ($j = 0; $j < $ancho; $j++) {

                    if ($i == $largo - 1 || $i == 0) {
                        echo '<span  style= "background-color:rgb('.  $i *50 .',  '. $j *10 .', 0);">'.$pared.'</span>' ;
                    } else {
                        if ($j == $ancho-1) {
                            echo '<span  style= "background-color:rgb('.$i *50 .', 0,  '. $j *10 .');">'.$pared.'</span>' ;
                        } else {

                            echo '<span  style= "background-color:rgb('. $i *50 .', 0, '. $j *10 .');">'.$espacio.'</span>' ;
                        }
                    }
                }
            }




            ?>






        </p>

    </div>
</div>

